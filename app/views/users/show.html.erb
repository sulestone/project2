<body class="user-unique">
<div class="page-header">
  <%= link_to edit_user_path(@user), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <%= link_to @user, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-primary' do%>
    Delete Account
  <% end %>

  <div class="user-header"><h1>User Profile</h1></div>
</div>
<br>
<br>
<div class="col-md-6 col-md-offset-3">
  <dl class="dl-horizontal">
    <dt>First name:</dt>
    <dd><%= @user.first_name %></dd>

    <dt>Last name:</dt>
    <dd><%= @user.last_name %></dd>

    <dt>Email:</dt>
    <dd><%= @user.email %></dd>
  </dl>
</div>
</body>
